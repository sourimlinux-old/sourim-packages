name="kmod"
version="v30"
depends="glibc"
source=(
    "https://github.com/kmod-project/kmod/archive/refs/tags/$version.zip"
)

package() {
    cd $name-$version
    ./configure --prefix=/usr          \
                --sysconfdir=/etc      \
                --with-openssl         \
                --with-xz              \
                --with-zstd            \
                --with-zlib
    
    ln -sfv kmod $1/usr/bin/lsmod
    make
    make install DESTDIR=$1
}
