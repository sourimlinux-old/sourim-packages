name="gcc"
version="13.2.0"
depends="glibc binutils"
source=(
  "https://ftp.gnu.org/gnu/gcc/gcc-$version/gcc-$version.tar.xz"
)

package() {
    cd $name-$version
    ./configure \
      --prefix=/usr \
      --disable-multilib \
      --with-system-zlib \
      --enable-default-pie \
      --enable-default-ssp \
      --disable-fixincludes \
      --enable-languages=c,c++,fortran,go,objc,obj-c++,m2
    make
    make install DESTDIR=$1
}