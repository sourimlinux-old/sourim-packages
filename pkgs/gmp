name="gmp"
version="6.3.0"
depends="glibc"
source=(
    "https://ftp.gnu.org/gnu/gmp/gmp-$version.tar.xz"
)

package() {
    cd $name-$version
    ./configure --prefix=/usr    \
            --enable-cxx     \
            --disable-static \
            --docdir=/usr/share/doc/gmp-$version
    make
    make install DESTDIR=$1
}