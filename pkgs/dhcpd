name="dhcpcd"
version="10.0.6"
depends="glibc"
source=(
    "https://github.com/NetworkConfiguration/dhcpcd/releases/download/$version/dhcpcd-$version.tar.xz"
)

package() {
    cd $name-$version
    ./configure --prefix=/usr                \
                --sysconfdir=/etc            \
                --libexecdir=/usr/lib/dhcpcd \
                --dbdir=/var/lib/dhcpcd      \
                --runstatedir=/run           \
                --disable-privsep        
    make
    make install DESTDIR=$1
}
