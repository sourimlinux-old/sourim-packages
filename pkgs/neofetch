name="neofetch"
version="7.1.0"
depends="bash coreutils"
source=(
    "https://github.com/dylanaraps/neofetch/archive/refs/tags/$version.tar.gz"
)
source_sha256=(
    "58a95e6b714e41efc804eca389a223309169b2def35e57fa934482a6b47c27e7"
)

package() {
    cd $name-$version
    make install DESTDIR=$1
}